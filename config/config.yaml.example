# Oracle Database Configuration
oracle_db:
  username: "your_username"  # Set via ORACLE_USER env var
  password: "your_password"  # Set via ORACLE_PASSWORD env var
  dsn: "localhost:1521/ORCL"  # Format: host:port/service_name (Set via ORACLE_DSN env var)
  pool_min: 1
  pool_max: 5
  pool_increment: 1
  # Retry configuration for database operations
  retry:
    max_retries: 3              # Maximum retry attempts (0 = no retries)
    initial_backoff: 1.0        # Initial wait time in seconds before first retry
    max_backoff: 30.0           # Maximum wait time in seconds between retries
    backoff_multiplier: 2.0     # Exponential backoff multiplier

# MariaDB Configuration
mariadb:
  host: "localhost"  # Set via MARIADB_HOST env var
  port: 3306  # Set via MARIADB_PORT env var
  database: "etl_tracking"  # Set via MARIADB_DATABASE env var
  username: "your_username"  # Set via MARIADB_USER env var
  password: "your_password"  # Set via MARIADB_PASSWORD env var
  pool_size: 5
  # Retry configuration for database operations
  retry:
    max_retries: 3              # Maximum retry attempts (0 = no retries)
    initial_backoff: 1.0        # Initial wait time in seconds before first retry
    max_backoff: 30.0           # Maximum wait time in seconds between retries
    backoff_multiplier: 2.0     # Exponential backoff multiplier

# NATS Connection Configuration
nats:
  servers:
    - "nats://localhost:4222"  # Set via NATS_SERVERS env var (comma-separated)
  # Optional authentication
  # username: "nats_user"
  # password: "nats_password"
  max_reconnect_attempts: 60
  reconnect_time_wait: 2
  # Retry configuration for NATS publish operations
  retry:
    max_retries: 3              # Maximum retry attempts (0 = no retries)
    initial_backoff: 1.0        # Initial wait time in seconds before first retry
    max_backoff: 10.0           # Maximum wait time in seconds between retries
    backoff_multiplier: 2.0     # Exponential backoff multiplier

# IntimeTxLog Events Publishing Configuration
intime_txlog_events:
  stream_name: "TXLOG_STREAM"
  subject: "txlog.events"
  add_trace_id: true
  data_type: "TXLOG"

# Publisher Configuration
publisher:
  program_name: "M_INTIMECASEAGENT"  # Set via PROGRAM_NAME env var
  poll_interval: 60  # seconds (Set via POLL_INTERVAL env var)
  batch_size: 100  # Set via BATCH_SIZE env var
  max_records_per_run: 10000  # Set via MAX_RECORDS_PER_RUN env var
  max_retries: 3  # Maximum retry attempts for failed messages

# Logging Configuration
logging:
  level: "INFO"  # Set via LOG_LEVEL env var (DEBUG, INFO, WARNING, ERROR, CRITICAL)
  format: "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
